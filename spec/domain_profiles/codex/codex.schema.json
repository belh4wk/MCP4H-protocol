{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://belh4wk.github.io/MCP4H/spec/domain_profiles/codex/codex.schema.json",
  "title": "MCP4H codex profile (event stream) - dev",
  "allOf": [
    {
      "$ref": "../evidence/evidence.schema.json"
    },
    {
      "type": "object",
      "properties": {
        "profile": {
          "type": "string",
          "pattern": "^codex/"
        },
        "events": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "pattern": "^codex\\."
              }
            }
          }
        },
        "extensions": {
          "type": "object",
          "properties": {
            "codex": {
              "type": "object"
            }
          }
        }
      }
    }
  ]
}
