{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MCP4H Cue Packet Schema v0.1",
  "type": "object",
  "required": [
    "subject",
    "signal",
    "state",
    "trend",
    "urgency",
    "channels",
    "version",
    "ts"
  ],
  "properties": {
    "subject": {
      "type": "string"
    },
    "signal": {
      "type": "string"
    },
    "state": {
      "type": "string",
      "enum": [
        "OK",
        "RISK",
        "ALERT"
      ]
    },
    "trend": {
      "type": "string",
      "enum": [
        "up",
        "down",
        "unstable",
        "steady"
      ]
    },
    "urgency": {
      "type": "string",
      "enum": [
        "notice",
        "caution",
        "act"
      ]
    },
    "action_hint": {
      "type": "string"
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "channels": {
      "type": "object"
    },
    "scope": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "ts": {
      "type": "integer"
    },
    "version": {
      "type": "string"
    }
  }
}