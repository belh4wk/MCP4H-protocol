{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MCP4H Cue",
  "type": "object",
  "required": [
    "id",
    "ts",
    "channel",
    "intent"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "ts": {
      "type": "string"
    },
    "channel": {
      "type": "string",
      "enum": [
        "audio",
        "haptic",
        "visual",
        "multi"
      ]
    },
    "intent": {
      "type": "string"
    },
    "urgency": {
      "type": "string",
      "enum": [
        "low",
        "med",
        "high"
      ],
      "default": "low"
    },
    "payload": {
      "type": "object"
    }
  },
  "additionalProperties": true
}