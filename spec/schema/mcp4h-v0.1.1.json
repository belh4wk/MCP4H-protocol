{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MCP4H Envelope v0.1.1",
  "description": "Additive envelope schema for MCP4H v0.1.x. Optional fields include: profile, msg_type, seq, ts_monotonic_us, content_type.",
  "type": "object",
  "required": [
    "version",
    "source_id",
    "payload"
  ],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^0\\.1(\\.\\d+)?$"
    },
    "profile": {
      "type": "string",
      "enum": [
        "udp-realtime",
        "mqtt-dist",
        "ws-dashboard"
      ]
    },
    "msg_type": {
      "type": "string",
      "enum": [
        "telemetry",
        "cue",
        "state",
        "config",
        "ack"
      ]
    },
    "content_type": {
      "type": "string",
      "enum": [
        "application/vnd.mcp4h.v0.1+json",
        "application/vnd.mcp4h.v0.1+cbor"
      ]
    },
    "source_id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 64
    },
    "seq": {
      "type": "integer",
      "minimum": 0,
      "maximum": 4294967295
    },
    "ts_monotonic_us": {
      "type": "integer",
      "minimum": 0
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "payload": {
      "type": "object"
    }
  },
  "additionalProperties": true
}